<div class="backSearchContainer">
	<form id="searchLocation" method="GET" action="/coffee" class="backSearchBox" role="search">
		<input type="hidden" id="demo" name="ll"></input>
		<button type="submit" id="search" class="backBTN submitBTN btn btn-default crossRotate">&larr; &#9749</button>
	</form>
</div>

<div class="favoritesPage">

	<% favorites.forEach(function(favorites){ %>

	<div class="well">
		<h1 class="name">Name: <%= favorites.name  %> <img class="rating"src="<%= favorites.rating_img_url_large %>"/>  </h1>
		<p class="address">Address: <%= favorites.address%> </p>
		<p class="info">Phone-Number: <%= favorites.phone_number%></p>
		<p class="info">Open/Closed: <% if (favorites.is_closed == false){ %>

				<span class="open">Open</span>

				<% } else { %>

					<span class="closed">Closed</span>

				<% } %>
			</p>
		<p> <img src="<%= favorites.image_url %>"/></p>

		<a href="/showMap/<%= favorites.id %>" class="btn info-btn mapBTN">Show on map</a>
		
	</div>
	<% }) %>
</div>
<script>
    var markers = <%- JSON.stringify(favorites) %>;
</script>
