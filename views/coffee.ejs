<h1>Coffee shops near you</h1>

<a href="/users" class="btn btn-primary">Back To Search</a>

	<% coffeeShop.businesses.forEach(function(coffeeShop){ %>

		<div class="well">	

			<h1 class="name"> <%= coffeeShop.name %> </h1>

			<p>Rating:<img src="<%= coffeeShop.rating_img_url_large %>"/> </p>

			<p>Address: <%= coffeeShop.location.display_address %></p>

			<p>Phone Number: <%= coffeeShop.phone %> </p>

			<p> <% if (coffeeShop.is_closed == false){ %>

				<span class="open">Open</span>

				<% } else { %>

					<span class="closed">Closed</span>

				<% } %>
			</p>


			<p>Yelp Page: <a href="<%= coffeeShop.url %>" target="_blank"> <%= coffeeShop.url %> </a> </p>

			<img src="<%= coffeeShop.image_url %>"/>

			

			<form action="/favorites" method="POST" role="form">

					<input type="hidden" value="<%= coffeeShop.name %>" id="name" name="name">

					<input type="hidden" value="<%= coffeeShop.location.display_address %>" id="address" name="address">

					<input type="hidden" value="<%= coffeeShop.phone%>" id="phone" name="phone_number">

					<input type="hidden" value="<%= coffeeShop.is_closed %>" id="is_closed" name="is_closed">

					<input type="hidden" value="<%= coffeeShop.url %>" id="url" name="url">

					<input type="hidden" value="<%= coffeeShop.image_url %>" id="image_url" name="image_url">

					<input type="hidden" value="<%= coffeeShop.rating_img_url_large %>" name="rating_img_url_large">

					<input  value="<%= coffeeShop.location.coordinate.latitude%>" name="lat">

					<input  value="<%= coffeeShop.location.coordinate.longitude%>" name="lng">


					<button type="submit" class="btn btn-primary">+ to favorites</button>

			</form>

		</div>



	<% }); %>
